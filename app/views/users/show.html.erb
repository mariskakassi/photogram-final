<div>
  <div>
    <h1>
      <%= @the_user.username %>
    </h1>

    <dl>
      <dt>
        Private
      </dt>
      <dd>
        <%= @the_user.private %>
      </dd>

      <dt>
        Followers
      </dt>
      <dd>
        <%= @follower_num %>
        <div>
        
        <!--<a href="/delete_follow_request/<%#= @the_user.username %>"> Unfollow </a>-->
        </div>
      </dd>

      <dt>
        Following
      </dt>
      <dd>
        <%= @following_num %>
      </dd>
      
    </dl>
  </div>
</div>

<div>
  <ul>
    <li>
      <a href="/users/<%= @the_user.username %>"> Profile </a>
    </il>
    <li>
      <a href="/users/<%= @the_user.username %>/liked_photos"> Liked photos </a>
    </il>
    <li>
      <a href="/users/<%= @the_user.username %>/feed"> Feed </a>
    </il>
    <li>
      <a href="/users/<%= @the_user.username %>/discover"> Discover </a>
    </il>
  </ul>

</div>

<div>
  <h2> Own photos (<%= @photo_num %>)</h2>
  <table border="1">
  <tr>
    <th>
      Image
    </th>

    <th>
      Owner
    </th>

    <th>
      Caption
    </th>

    <th>
      Posted
    </th>

    <th>
      Likes
    </th>

    <td>
    </td>
  </tr>

  <% @list_of_photos.each do |a_photo| %>

    <tr>
      <td>
        <img src="<%= a_photo.image %>" height="300px">
      </td>

      <td>
        <%= a_photo.poster.username %>
      </td>

      <td>
        <%= a_photo.caption %>
      </td>

      <td>
        <%= time_ago_in_words(a_photo.updated_at) %> ago
      </td>

      <td>
        <%= a_photo.likes_count %>
      </td>

      <td>
        <a href="/photos/<%= a_photo.id %>">
          Show details
        </a>
      </td>
    </tr>
  <% end %>
  </table>

</div>
